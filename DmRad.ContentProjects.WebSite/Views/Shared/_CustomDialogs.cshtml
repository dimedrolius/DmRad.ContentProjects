<div id="alerts">
    <div class="alert alert-warning alert-dismissible" role="alert" id="warningAlert" style="display: none;">
        <button type="button" class="close" onclick="$(this).parent().fadeOut();"><span aria-hidden="true">&times;</span></button>
        <div></div>
    </div>
    <div class="alert alert-danger alert-dismissible" role="alert" id="errorAlert" style="display: none;">
        <button type="button" class="close" onclick="$(this).parent().fadeOut();"><span aria-hidden="true">&times;</span></button>
        <div></div>
    </div>
    <div class="alert alert-warning alert-dismissible" role="alert" id="promptDialog" style="display: none;">
        <form>
            <div class="form-group">
                <label></label>
                <input type="text" class="form-control" id="txtPrompt">
            </div>
            <button type="button" class="btn btn-success" id="btnPromptOk">
                <span class="glyphicon glyphicon-ok"></span> OK
            </button>
            <button type="button" class="btn btn-default" onclick="$('#promptDialog').fadeOut();">
                Отмена
            </button>
        </form>
    </div>
    <div class="alert alert-warning alert-dismissible" role="alert" id="confirmDialog" style="display: none;">
        <form>
            <label></label>
        </form>
        <button type="button" class="btn btn-success" id="btnConfirmYes">
            Да
        </button>
        <button type="button" class="btn btn-default" onclick="$('#confirmDialog').fadeOut();">
            Нет
        </button>
    </div>
</div>

<script>
    function showInfoAlert(messageHtml) {
        $('#warningAlert div').html(messageHtml);
        $('#warningAlert').fadeIn();
    }

    function showErrorAlert(messageHtml) {
        $('#errorAlert div').html(messageHtml);
        $('#errorAlert').fadeIn();
    }

    function showPromptDialog(txt, callbackFunc) {
        $('#promptDialog form div label').text(txt);

        $('#btnPromptOk').click(function () {
            $('#promptDialog').fadeOut();
            callbackFunc($('#txtPrompt').val());
        });

        $('#txtPrompt').val('');
        $('#promptDialog').fadeIn();
    }

    function showConfirmDialog(txt, callbackFunc) {
        $('#confirmDialog form label').text(txt);

        $('#btnConfirmYes').off('click');
        $('#btnConfirmYes').click(function () {
            $('#confirmDialog').fadeOut();
            callbackFunc();
        });

        $('#confirmDialog').fadeIn();
    }
</script>